{
  "name": "@alayanetwork/controllers",
  "version": "3.0.1",
  "description": "Collection of platform-agnostic modules for creating secure data models for cryptocurrency wallets",
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "main": "./dist/index.js",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "prepublishOnly": "yarn build",
    "lint": "eslint --ext .ts .",
    "test": "jest --coverage",
    "format": "prettier **/*.ts --write --ignore-path=.gitignore",
    "build": "rm -rf dist && tsc",
    "build:watch": "yarn build && tsc -w",
    "build:link": "yarn build && cd dist && yarn link && rm -rf node_modules && cd ..",
    "doc": "typedoc src/ && touch docs/.nojekyll"
  },
  "homepage": "https://github.com/AlayaNetwork/samurai-controllers#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlayaNetwork/samurai-controllers.git"
  },
  "keywords": [
    "Samurai",
    "PlatON"
  ],
  "bugs": {
    "url": "https://github.com/AlayaNetwork/samurai-controllers/issues"
  },
  "dependencies": {
    "await-semaphore": "^0.1.3",
    "eth-contract-metadata": "^1.11.0",
    "eth-ens-namehash": "^2.0.8",
    "eth-json-rpc-infura": "^5.0.0",
    "@alayanetwork/eth-keyring-controller": "^6.1.0",
    "@alayanetwork/eth-method-registry": "^1.2.0",
    "eth-phishing-detect": "^1.1.13",
    "@alayanetwork/eth-query": "^2.1.2",
    "eth-rpc-errors": "^2.1.1",
    "@alayanetwork/eth-sig-util": "^2.5.3",
    "ethereumjs-util": "^6.1.0",
    "ethereumjs-wallet": "0.6.0",
    "@alayanetwork/ethjs-query": "^0.3.4",
    "human-standard-collectible-abi": "^1.0.2",
    "human-standard-token-abi": "^2.0.0",
    "isomorphic-fetch": "^2.2.1",
    "jsonschema": "^1.2.4",
    "percentile": "^1.2.1",
    "single-call-balance-checker-abi": "^1.0.0",
    "uuid": "^3.3.2",
    "web3": "^0.20.7",
    "web3-provider-engine": "^15.0.4"
  },
  "devDependencies": {
    "@metamask/eslint-config": "^3.0.0",
    "@types/fetch-mock": "^7.3.1",
    "@types/jest": "^22.2.3",
    "@types/node": "^10.1.4",
    "@types/sinon": "^4.3.3",
    "@types/web3": "^1.0.6",
    "@types/xtend": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "eslint": "^6.8.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.6.0",
    "ethjs-provider-http": "^0.1.6",
    "fetch-mock": "^7.3.9",
    "jest": "^26.4.2",
    "jsdom": "11.11.0",
    "lint-staged": "^6.1.0",
    "prettier": "^2.1.1",
    "scrypt": "github:barrysteyn/node-scrypt#pull/144/head",
    "sinon": "^7.4.1",
    "ts-jest": "^26.3.0",
    "typedoc": "^0.15.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "tests/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "setupFiles": [
      "./tests/setupTests.ts"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "parser": "typescript",
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "yarn lint",
      "git add"
    ]
  }
}
